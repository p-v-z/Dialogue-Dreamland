.hidden {
    display: none;
}

.button {
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    background-color: var(--primary-color);
    transition-duration: 0.3s;
    transition-timing-function: ease-in-out;
    align-self: center;
    border-left-color: rgba(255, 255, 255, 0.51);
    border-right-color: rgba(255, 255, 255, 0.51);
    border-top-color: rgba(255, 255, 255, 0.51);
    border-bottom-color: rgba(255, 255, 255, 0.51);
}

.button:hover {
}

.button:active {
    background-color: rgb(45, 58, 46);
    transition-duration: 0.1s;
    transition-timing-function: ease-in-out;
    color: rgb(138, 222, 226);
}

.message > #unity-text-input {
    width: auto;
}

TextField > #unity-text-input {
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

.ai > #TxtSaid > #unity-text-input {
    background-color: var(--quaternary-color);
    border-top-left-radius: 0;
    border-bottom-left-radius: 15px;
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
}

.user > #TxtSaid > #unity-text-input {
    background-color: var(--tertiary-color);
    -unity-text-align: upper-right;
    border-top-right-radius: 0;
    border-bottom-left-radius: 15px;
    border-top-left-radius: 15px;
    border-bottom-right-radius: 15px;
    color: rgb(255, 255, 255);
}

TextField > Label {
    display: none;
    visibility: hidden;
}

#ChatInput {
    background-color: var(--secondary-color);
    -unity-background-image-tint-color: rgba(0, 0, 0, 0);
    flex-direction: row;
}

#TxtInput {
    width: 85%;
    flex-direction: row;
}

#TxtDialogue {
    transition-duration: 0.3s;
    transition-timing-function: ease-in-out;
}

#APIUI {
    background-color: var(--quaternary-color);
    border-top-left-radius: 15px;
    border-bottom-left-radius: 15px;
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
    width: 60%;
    align-self: center;
    justify-content: space-evenly;
    padding-left: 15px;
    padding-right: 15px;
    padding-top: 10px;
    padding-bottom: 10px;
}

#BtnSay {
}

#BtnClearCache {
    -unity-font-style: bold;
    font-size: 20px;
    align-self: flex-end;
}

TextField > #unity-text-input {
    white-space: normal;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    transition-duration: 0.5s;
    transition-timing-function: ease-in-out;
}

.valid > #unity-text-input {
    border-left-color: rgb(185, 233, 184);
    border-right-color: rgb(185, 233, 184);
    border-top-color: rgb(185, 233, 184);
    border-bottom-color: rgb(185, 233, 184);
    border-left-width: 2px;
    border-right-width: 2px;
    border-top-width: 2px;
    border-bottom-width: 2px;
}

.invalid > #unity-text-input {
    border-left-color: rgba(255, 0, 0, 0.39);
    border-right-color: rgba(255, 0, 0, 0.39);
    border-top-color: rgba(255, 0, 0, 0.39);
    border-bottom-color: rgba(255, 0, 0, 0.39);
    border-left-width: 2px;
    border-right-width: 2px;
    border-top-width: 2px;
    border-bottom-width: 2px;
}
